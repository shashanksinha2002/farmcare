<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
  </head>

  <body>
    <%- include('../partials/navbar') %>

    <div class="container">
      <div class="row justify-content-center">
        <div class="col-5 text-center">
          <%- include('../partials/flash') %>

          <div class="card mb-4">
            <h1 class="card-header">Details</h1>
            <div class="card-body">
              <ul class="list-group list-group-flush">
                <li class="list-group-item">
                  First Name: <%= currentUser.firstName %>
                </li>
                <li class="list-group-item">
                  Last Name: <%= currentUser.lastName %>
                </li>
                <li class="list-group-item">Email: <%= currentUser.email %></li>
                <li class="list-group-item">Phone: <%= currentUser.phone %></li>
                <li class="list-group-item">
                  Username: <%= currentUser.username %>
                </li>
              </ul>
            </div>
            <a href="/dashboard/edit" class="btn btn-success">Edit</a href="/dashboard/edit">
          </div>
        </div>
      </div>
      <div class="row justify-content-center">
        <% for(let farm of farms) {%> <%
        if(farm.author._id.equals(currentUser._id)) {%>

        <div class="col-2 text-center">
          <div class="card">
            <a href="/farms/<%= farm._id %>">
              <%=farm.name%>
              <span class="material-icons">launch</span>
            </a>
          </div>
        </div>
        <% } %> <% } %>
      </div>
    </div>
    <!--scripts-->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
