<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Products</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
  </head>

  <body>
    <%- include('../partials/navbar') %>

    <main class="container">
      <div class="row justify-content-center">
        <%- include("../partials/flash") %>
        <div class="mt-5 col-6">
          <section class="card text-center">
            <h1 class="card-header"><%= category%> Products!</h1>
            <div class="card-body">
              <ul class="list-group list-group-flush">
                <% for(let product of products) { %>
                <li class="list-group-item">
                  <a href="/products/<%=product._id%>" class="btn btn-primary"
                    ><%= product.name %>
                    <sapn class="material-icons">open_in_new</sapn>
                  </a>
                </li>
                <% }%>
              </ul>
              <%if(category !== 'All') {%>
              <a href="/products">All Products</a>
              <% } %>
            </div>
            <!-- <a href="/products/new" class="btn btn-success">New Product</a> -->
          </section>
        </div>

        <div class="mt-5 col-4">
          <form
            action="/search"
            method="GET"
            class="p-3 border-top border-bottom border-2 border-dark"
          >
            <input
              type="text"
              name="search"
              class="form-control mb-3"
              placeholder="Enter product name"
            />
            <button class="btn btn-outline-success">Search Products</button>
          </form>
          <div class="card"><%= %></div>
        </div>
      </div>
      <div class="row justify-content-start">
        <div class="col-6">
          <a href="/farms" class="btn btn-outline-dark">All Farms</a>
        </div>
      </div>
    </main>
    <!--scripts-->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
